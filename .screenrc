# Enable 256 colour compatability
term "screen-256color"

# Allow bold colors (necessary?)
attrcolor b ".I"

# Display a list of screen windows below the terminal
hardstatus on
hardstatus alwayslastline
hardstatus string "%{+d Kw} %-w%{= Kr}[%{= KW}%n %t%{-}]%{-}%+w %= %H | %{= Ky}%Y-%M-%d %C%a%{-} "
# %{+d KW}	: Set colors to bright white on dull black and set as dim (+d)
# %-w		: Display windows before current window
# %{= Kr}	: Set colors to red on dull black and keep text styles the same (=)
# [			: Opening bracket for current window
# %{= KW}	: Set colors to white on dull black and keep text styles the same (=)
# %n		: Display number for current window
# %t		: Display title for current window
# {-}		: Reset colors to previous setting
# ]			: Closing bracket for current window
# {-}		: Reset colors to previous setting
# %+w		: Display windows after current window
# %=		: Align to the right (by filling remaining space)
# %H		: Display hostname
# |			: Separator between hostname and date/time
# %{= Ky}	: Set colors to yellow on dull black and keep text styles the same (=)
# %Y		: Display current year
# %M		: Display current month
# %d		: Display current day
# %C		: Display current time
# %a		: Display current am/pm
# {-}		: Reset colors to previous setting
altscreen on

# Don't display the welcome message
startup_message off

# Keep a history within screen of previous commands
defscrollback 10000


# Declare bash screen
screen
title bash

# Declare vim screen
screen
title vim

# Switch back to first screen
select 1
select 0
